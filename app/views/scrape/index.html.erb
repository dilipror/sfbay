<table class='table table-striped table-bordered sortable' id="mytable">
  <thead>
    <th> Title </th>
    <th> Mileage </th>
  </thead>
  <tbody>
    <% @mileages.each do |mileage| %>
      <tr>
        <td><%= mileage.title %></td>
        <td><%= mileage.mileage %></td>
      </tr>
    <% end %>
  </tbody>
</table>